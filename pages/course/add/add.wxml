<!--pages/publish_course/publish_course.wxml-->
<scroll-view scroll-y class="scrollPage">
  <form bindsubmit="confirm">
    <view class="cu-form-group margin-top">
      <view class="title">课程名字</view>
      <input placeholder="必填" name="name"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">培训价格</view>
      <input placeholder="必填" name="price"></input>
    </view>
    <view class="cu-form-group" bindtap="chooseAddress">
      <view class="title">地址选择</view>
      <input placeholder="必填" name="position" value="{{address.name}}"></input>
    </view>
     <view class="cu-form-group">
      <view class="title">详细地址</view>
      <input placeholder="必填" name="streets" value="{{address.address}}"></input>
    </view>
    <view class="cu-form-group margin-top">
      <view class="title">行业选择</view>
      <picker bindchange="professionChange" value="{{professionPickerIndex}}" range="{{professionPicker}}" name="profession" range-key="name">
        <view class="picker">
          {{professionPicker[professionPickerIndex].name?professionPicker[professionPickerIndex].name:'未选择'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">开始日期</view>
      <picker mode="date" value="{{startTime}}" start="2015-09-01" end="2020-09-01" bindchange="startTimeChange" name="startTime">
        <view class="picker">
          {{startTime?startTime:'未选择'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">结束日期</view>
      <picker mode="date" value="{{startTime}}" start="2015-09-01" end="2020-09-01" bindchange="endTimeChange" name="endTime">
        <view class="picker">
          {{endTime?endTime:'未选择'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">地址选择</view>
      <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}" name="location">
        <view class="picker">
          {{region[0]}}，{{region[1]}}，{{region[2]}}
        </view>
      </picker>
    </view>

    <view class="cu-list menu margin-top" bindtap="toCer">
      <view class="cu-item arrow">
        <view class="content">
          <text class="">证书选择</text>
        </view>
        <view class="action">{{certificate.name}}</view>
      </view>
    </view>

    <view class="cu-list menu margin-top" bindtap="toCourseDetailEditor">
      <view class="cu-item arrow">
        <view class="content">
          <text class="">课程详情</text>
        </view>
          <view class="action">{{editorContent?'有':'无'}}</view>
      </view>

    <view class="cu-bar bg-white margin-top">
      <view class="action">
        图片上传
      </view>
      <view class="action">
        0/4
      </view>
    </view>
    
    <view class="cu-form-group">
      <view class="grid col-4 grid-square flex-sub">
        <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
          <image src='{{imgList[index]}}' mode='aspectFill'></image>
          <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
            <text class="cuIcon-close"></text>
          </view>
        </view>
        <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
          <text class="cuIcon-cameraadd"></text>
        </view>
      </view>
    </view>
    </view>

    
  <view class="cu-bar btn-group margin-top margin-bottom">
      <button class="cu-btn bg-green shadow-blur round lg" formType="submit">保存</button>
    </view>
  </form>
</scroll-view>