/* components/course-card/course-card.wxss */

.course-card {
  padding: 16rpx 30rpx;
  border-bottom: 2rpx solid #ddd;
}

.top {
  display: flex !important;
}

.info {
  flex: 1;
  padding-left: 18rpx;
}

.name-wrap {
  margin-bottom: 40rpx;
}

.name {
  font-weight: bold;
}

.image-wrap {
  width: 260rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 16rpx;
}

.tag {
  display: inline-block;
  line-height: 1;
  padding: 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #ff9800;
  background-color: #f7ef9d;
  border-radius: 8rpx;
}

.address-price {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.price {
  color: #c63333;
}

.bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.date {
  flex: 1;
}

.btn {
  display: inline-block;
  font-size: 24rpx;
  color: #fff;
  background-color: #d53131;
  /* box-shadow: 0 16rpx 16rpx 0 rgba(0, 0, 0, 0.24); */
  /* position: relative;
  top: -20rpx; */
}
